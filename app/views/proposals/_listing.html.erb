  </script>

  <div class="media">
    <div class="media-left">
      <div id="map<%= proposal.id %>" class="maplist"></div> 
    </div>
    <div class="media-body">
      <div class="row">
        <div class="col-md-1"><%= avatar_tag proposal.user %></div>
        <div class="col-md-11">
          <h4 class="media-heading"><%= link_to proposal.title, proposal %></h4>
          <ul class="list-inline">
            <li><%= fa_icon 'calendar', text: l(proposal.created_at) %></li>
            <li><span class="label label-default"><%= fa_icon 'map', text: proposal.city.name_with_state %></span></li>
            <li><span class="label label-default"><%= fa_icon 'bookmark', text: proposal.proposal_category.name %></span></li>
			<li><%= fa_icon 'comments-o', text: proposal.comments.count %></li>
          </ul>
        </div>
      </div>
    
      <p><%= simple_format proposal.content %></p>

      <div class="row">
        <div class="col-md-2" id="votes"><%= render 'votes', proposal: proposal %></div>
        <div class="col-md-6">
          <strong>Aprovação</strong>
          <div id="thermometer"><%= render 'thermometer', total: proposal.thermometer %></div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <p>Nenhuma proposta encontrada</p>
<% end %>

<%= pagination_links @proposals %>
