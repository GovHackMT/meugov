<%= simple_form_for(@proposal) do |f| %>
  <%= f.error_notification %>

  <%= f.input :proposal_category_id, collection: ProposalCategory.order(:name) %>
  <%= f.input :title %>
  <%= f.input :content %>

  <fieldset>
    <legend><%= t '.address' %></legend>
    <%= f.input :city_id, collection: City.avaliable, label_method: :name_with_state %>
    <%= f.input :cep %>
    <%= f.input :street %>
    <%= f.input :number %>
    <%= f.input :complement %>
    <%= f.input :neighborhood %>
  </fieldset>

  <p><%= f.submit t('save'), class: "btn btn-primary" %></p>
<% end %>
