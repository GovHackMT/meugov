<% if @proposals.size > 0 %>
  <% @proposals.each do |proposal| %>
  <div class="media">
    <div class="media-left">
      <%= avatar_tag proposal.user %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= link_to proposal.title, proposal %></h4>
      <ul class="list-inline">
        <li><%= fa_icon 'calendar', text: l(proposal.created_at) %></li>
        <li><%= fa_icon 'map', text: proposal.city.name_with_state %></li>
        <li><%= fa_icon 'bookmark', text: proposal.proposal_category.name %></li>
        <li><%= fa_icon 'comments-o', text: proposal.comments.count %></li>
      </ul>
      <%= simple_format proposal.content %>

      <div class="row">
        <div class="col-md-6" id="votes"><%= render 'votes', proposal: proposal %></div>
        <div class="col-md-6">
          <strong>Aprovação</strong>
          <div id="thermometer"><%= render 'thermometer', total: proposal.thermometer %></div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <p>Nenhuma proposta encontrada</p>
<% end %>

<%= pagination_links @proposals %>
