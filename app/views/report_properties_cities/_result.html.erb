<% if @cities.nil? %>
  <p>Por favor informe a categoria da propriedade</p>
<% else %>
  <hr />
  <table class="table table-bordered">
    <thead>
      <tr>
        <td>Ranking</td>
        <td>Cidade</td>
        <td>N&deg; de Hab.</td>
        <td>PIB</td>
        <td>Total de Prop.</td>
        <td>Prop/Hab</td>
      </tr>
    </thead>
    <tbody>
      <%
      @cities.each_with_index do |city, i| %>
      <tr>
        <td><%= (i+1) %></td>
        <td><%= city.name %></td>
        <td><%= city.population %></td>
        <td><%= city.pib %></td>
        <td><%= city.total_properties %></td>
        <td><%= city.properties_population %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
