<%= render 'mainmap' %>
<section class="propostas-home">
	<div class="row">
			<div class="col-sm-6">

				<h1>Propostas do Governo</h1>

				<% @government_proposals.each do |proposal| %>
				<div class="well">
					<div class="proposta <%= proposal_class proposal.thermometer %>">
						<div class="proposta-section">
							<h3><%= link_to proposal.title, proposal %></h3>
						</div>
						<div class="proposta-desc">
							<div class="row">
								<div class="col-sm-6">
									<%= fa_icon 'map-marker' %>
									<div class="proposta-writer">
										<div class="proposta-writer-name"><%= proposal.city.name %></div>
										<div class="proposta-writer-designation"><%= proposal.user.nickname %></div>
										<span class="proposta-date"><%= l proposal.created_at, format: :only_date %></span>
									</div>
								</div>
								<div class="col-sm-6">
									<span>Índice de aprovação</span>
									<%= render "proposals/thermometer", total: proposal.thermometer %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<% end %>

			</div>

			<div class="col-sm-6">

				<h1>Propostas do Sociedade</h1>

				<% @society_proposals.each do |proposal| %>
				<div class="well">
					<div class="proposta <%= proposal_class proposal.thermometer %>">
						<div class="proposta-section">
							<h3><%= link_to proposal.title, proposal %></h3>
						</div>
						<div class="proposta-desc">
							<div class="row">
								<div class="col-sm-6">
									<%= fa_icon 'map-marker' %>
									<div class="proposta-writer">
										<div class="proposta-writer-name"><%= proposal.city.name %></div>
										<div class="proposta-writer-designation"><%= proposal.user.nickname %></div>
										<span class="proposta-date"><%= l proposal.created_at, format: :only_date %></span>
									</div>
								</div>
								<div class="col-sm-6">
									<span>Índice de aprovação</span>
									<%= render "proposals/thermometer", total: proposal.thermometer %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<% end %>

			</div>
		</div>
</section>
