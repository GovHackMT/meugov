<div class="propostas-home">

  <div class="well">
    <div class="proposta proposta-success">
      <div class="proposta-map">
        <div id="map<%= proposal.id %>" class="maplist"></div>
      </div>
      <div class="proposta-section">
        <h3><%= link_to proposal.title, proposal %></h3>
      </div>
      <div class="proposta-desc">
        <div class="row">
          <div class="col-md-12">
            <p><%= simple_format proposal.content %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <% #= fa_icon 'map-marker' %>
            <%= avatar_tag proposal.user %>
            <div class="proposta-writer">
              <div class="proposta-writer-name"><%= proposal.user %></div>
              <span class="proposta-date"><%= fa_icon 'calendar', text: l(proposal.created_at) %></span> 
              <div class="proposta-writer-designation"><%= fa_icon 'map', text: proposal.city.name_with_state %></div>

            </div>
          </div>
          <div class="col-sm-6">
            <div class="row">
              <div class="col-md-3"><%= render 'votes', proposal: proposal %></div>
              <div class="col-md-9">
                <!-- <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="84" aria-valuemin="0" aria-valuemax="100" style="width: 84%;"> -->
                <%= render 'thermometer', total: proposal.thermometer %></div>
            </div>
            
            <%= fa_icon 'comments-o', text: proposal.comments.count %>

        <div class="row">
          <div class="col-md-2" id="votes"><%= render 'votes', proposal: proposal %></div>
          <div class="col-md-6">
            <strong>Aprovação</strong>
            <div id="thermometer"></div>
          </div>
        </div>

          </div>
        </div>
      </div>

    </div> 
  </div>

</div>

